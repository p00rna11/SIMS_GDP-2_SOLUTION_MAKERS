<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".student.StudentAgreement">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="5dp"
        android:id="@+id/toptext"
        android:background="@color/northwest_green"
        android:minHeight="48dp"
        android:text="Student Agreement"
        android:textColor="@color/white"
        android:textSize="26sp"
        tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck,SpeakableTextPresentCheck,SpeakableTextPresentCheck,SpeakableTextPresentCheck,SpeakableTextPresentCheck,SpeakableTextPresentCheck,SpeakableTextPresentCheck,SpeakableTextPresentCheck,SpeakableTextPresentCheck,SpeakableTextPresentCheck,SpeakableTextPresentCheck,SpeakableTextPresentCheck">

    </TextView>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="169dp"
        android:layout_height="168dp"
        app:layout_constraintTop_toBottomOf="@id/toptext"
        android:layout_marginTop="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/splashscreen" />


    <TextView
        android:layout_width="match_parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:id="@+id/bigtextt"
        app:layout_constraintTop_toBottomOf="@id/imageView"
        android:textColor="@color/black"
        android:text="@string/studenttermsconditions" />
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="@dimen/_50sdp"
    android:layout_marginTop="40dp"
    android:id="@+id/check_layout"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@id/bigtextt"
    >

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/agreecheck"
        tools:ignore="TouchTargetSizeCheck"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_15sdp"
        android:textColor="@color/black"
        android:enabled="false"
        android:text="I accept terms and conditions"
        android:fontFamily="sans-serif-black"/>


</LinearLayout>

    <Button
        android:id="@+id/btnSubmitAgreement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/check_layout"
        android:layout_marginEnd="10dp"
        android:backgroundTint="@color/northwest_green"
        android:text="Submit" />

</androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>