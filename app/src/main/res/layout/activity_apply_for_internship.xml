<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".student.ApplyForInternship"
    android:padding="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".student.ApplyForInternship"
        android:orientation="vertical"
        android:padding="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Student Info"
            android:layout_margin="@dimen/_5sdp"
            android:textSize="@dimen/_24sdp"
            android:padding="@dimen/_5sdp"
            android:textColor="@color/white"
            android:fontFamily="sans-serif-black"
            android:background="@color/northwest_green"
            />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:layout_height="wrap_content"
            android:background="#FFF3EDED"
            android:focusable="true"
            android:id="@+id/enterfirstname"
            android:focusableInTouchMode="true"
            android:textColorHint="@color/northwest_green"
            android:hint="Enter first name"
            android:ems="10"
            android:inputType="text"
            android:textSize="22sp" />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:id="@+id/entermiddlename"
            android:focusable="true"
            android:background="#FFF3EDED"
            android:focusableInTouchMode="true"
            android:textColorHint="@color/northwest_green"
            android:hint="Enter middle name"
            android:ems="10"
            android:inputType="text"
            android:textSize="22sp" />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/_5sdp"

        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:focusableInTouchMode="true"
            android:id="@+id/enterlastname"
            android:background="#FFF3EDED"
            android:textColorHint="@color/northwest_green"
            android:hint="Enter last name"
            android:ems="10"
            android:inputType="text"
            android:textSize="22sp" />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/_5sdp"

        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:background="#FFF3EDED"
            android:id="@+id/enteruserid"
            android:textColorHint="@color/northwest_green"
            android:hint="Enter user id"
            android:ems="10"
            android:maxLength="10"
            android:inputType="number"
            android:textSize="22sp" />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/_5sdp"

        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:textColorHint="@color/northwest_green"
            android:hint="Enter address"
            android:id="@+id/enteraddress"
            android:background="#FFF3EDED"
            android:ems="10"
            android:inputType="text"
            android:textSize="22sp" />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/_5sdp"

        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:background="#FFF3EDED"
            android:focusableInTouchMode="true"
            android:textColorHint="@color/northwest_green"
            android:hint="phone number"
            android:ems="10"
            android:id="@+id/enterPhone"
            android:inputType="phone"
            android:textSize="22sp" />
    </com.google.android.material.textfield.TextInputLayout>

        <Spinner
            android:layout_width="match_parent"
            android:id="@+id/spinnerFall"
            android:background="#FFF3EDED"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_height="@dimen/_45sdp">

        </Spinner>

        <Spinner
            android:layout_width="match_parent"
            android:id="@+id/spinnerYear"
            android:background="#FFF3EDED"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_height="@dimen/_45sdp">

        </Spinner>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/_5sdp"

        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:id="@+id/entercrn"
            android:background="#FFF3EDED"
            android:focusableInTouchMode="true"
            android:textColorHint="@color/gray"
            android:hint="CRN"
            android:ems="10"
            android:inputType="number"
            android:textSize="22sp" />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/_5sdp"

        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:textColorHint="@color/gray"
            android:hint="Credit hours"
            android:background="#FFF3EDED"
            android:ems="10"
            android:id="@+id/entercredithours"
            android:inputType="number"
            android:textSize="22sp" />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/_5sdp"

        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:textColorHint="@color/gray"
            android:hint="Credit title"
            android:ems="10"
            android:textAllCaps="true"
            android:background="#FFF3EDED"
            android:id="@+id/entercredit"
            android:inputType="text"
            android:textSize="22sp" />
    </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btnContinue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/northwest_green"
            android:padding="18dp"
            android:text="Continue"
            android:textSize="18sp" />
    </LinearLayout>
</ScrollView>
